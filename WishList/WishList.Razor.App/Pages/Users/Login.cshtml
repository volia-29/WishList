@page
@model WishList.Razor.App.Pages.Users.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div>
    <h3>Login</h3>
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Person.UserName"></label>
            <input asp-for="Person.UserName" class="form-control" />
            <span class="text-danger" asp-validation-for="Person.UserName"></span>
        </div>

        <div class="form-group">
            <label asp-for="Person.Password"></label>
            <input asp-for="Person.Password" class="form-control" />
            <span class="text-danger" asp-validation-for="Person.Password"></span>
        </div>

        <div class="my-2">
            <button class="btn btn-primary">Login</button>
        </div>

    </form>
</div>
