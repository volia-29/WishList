@page
@model WishList.Razor.App.Pages.Wishes.MyWishesModel
@{
    Layout = "_Layout";
}

<h4>Add new wish</h4>
<hr />
<div class="row py-4">
    <div class="col-md-4">
        <form asp-action="MyWishes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewWish.Description" class="control-label"></label>
                <input asp-for="NewWish.Description" class="form-control" />
                <span asp-validation-for="NewWish.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button asp-page-handler="Add" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>

@if (Model.Wishes != null){
    <div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var wish in Model.Wishes)
                {
                    <tr>
                        <td>@wish.Description</td>
                        <td>
                            <form asp-action="MyWishes">
                                <button onclick="return confirm('Are you sure??')" asp-page-handler="Delete" asp-route-id="@wish.Id" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}